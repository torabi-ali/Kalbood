@page

@model LoginModel

@{
    ViewData["Title"] = "ورود";
}

<div class="page-title d-flex" aria-label="Page title" style="background-image: url(img/page-title/shop-pattern.jpg);">
    <div class="container text-right align-self-center">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">صفحه اصلی</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">حساب کاربری</a>
                </li>
            </ol>
        </nav>
        <h1 class="page-title-heading">@ViewData["Title"]</h1>
    </div>
</div>
<!-- Page Content-->
<div class="container mb-3">
    <div class="row">
        <div class="col-md-6 pb-5">
            <form class="needs-validation wizard" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="wizard-body pt-2">
                    <div class="input-group form-group">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fe-icon-mail"></i></span></div>
                        <input asp-for="Input.Username" class="form-control text-left placeholder-right" autocomplete="username" aria-required="true" placeholder="@Html.DisplayNameFor(p=>p.Input.Username)" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fe-icon-lock"></i></span></div>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@Html.DisplayNameFor(p=>p.Input.Password)" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-wrap justify-content-between">
                        <a class="navi-link" id="forgot-password" asp-page="./ForgotPassword">رمز عبور را فراموش کرده اید ؟</a>
                    </div>
                </div>
                <div class="wizard-footer text-right">
                    <button class="btn btn-primary" type="submit">ورود</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="/dist/jquery.validate.js"></script>
}
